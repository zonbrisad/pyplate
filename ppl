             -e "s/\<elif\>/\\${BP_C_RESERVED}&\\${E_END}/"    \
             -e "s/\<case\>/\\${BP_C_RESERVED}&\\${E_END}/"    \
             -e "s/\<esac\>/\\${BP_C_RESERVED}&\\${E_END}/"    \
             -e "s/\<for\>/\\${BP_C_RESERVED}&\\${E_END}/"     \
